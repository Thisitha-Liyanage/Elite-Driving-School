<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="saveInstructorAnc" prefHeight="500" prefWidth="700"
            style="-fx-background-color: #2C3E50;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm.orm_final_project.Controllers.InstructorManageController.SaveInstructor">

    <VBox layoutX="100" layoutY="40" prefWidth="500" spacing="20">

        <!-- Header -->
        <Label alignment="CENTER" prefWidth="500"
               style="-fx-font-size: 24px; -fx-text-fill: #ECF0F1; -fx-font-weight: bold;"
               text="Save Instructor" />

        <!-- Instructor ID -->
        <HBox spacing="15">
            <Label prefWidth="150" style="-fx-text-fill: #ECF0F1; -fx-font-size: 14px;" text="Instructor ID:" />
            <TextField fx:id="txtInstructorId" editable="false" prefWidth="300"
                       style="-fx-background-color: #34495E; -fx-text-fill: #BDC3C7; -fx-background-radius: 8;" />
        </HBox>

        <!-- Name -->
        <HBox spacing="15">
            <Label prefWidth="150" style="-fx-text-fill: #ECF0F1; -fx-font-size: 14px;" text="Name:" />
            <TextField fx:id="txtName" prefWidth="300"
                       style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-background-radius: 8;" />
        </HBox>

        <!-- Contact Number -->
        <HBox spacing="15">
            <Label prefWidth="150" style="-fx-text-fill: #ECF0F1; -fx-font-size: 14px;" text="Contact No:" />
            <TextField fx:id="txtContact" prefWidth="300"
                       style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-background-radius: 8;" />
        </HBox>

        <!-- Availability Checkbox -->
        <HBox spacing="15">
            <Label prefWidth="150" style="-fx-text-fill: #ECF0F1; -fx-font-size: 14px;" text="Availability:" />
            <CheckBox fx:id="chkAvailability" text="Available"
                      style="-fx-text-fill: #ECF0F1; -fx-font-size: 14px;" />
        </HBox>

        <!-- Specification -->
        <HBox spacing="15">
            <Label prefWidth="150" style="-fx-text-fill: #ECF0F1; -fx-font-size: 14px;" text="Specification:" />
            <TextField fx:id="txtSpecification" prefWidth="300"
                       style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-background-radius: 8;" />
        </HBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" layoutY="400" spacing="20">
            <Button fx:id="saveBtn" onAction="#saveBtnOnAction" prefHeight="35" prefWidth="100"
                    style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 14px;"
                    text="Save" />
            <Button fx:id="resetBtn" onAction="#resetBtnOnAction" prefHeight="35" prefWidth="100"
                    style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 14px;"
                    text="Reset" />
            <Button fx:id="closeBtn" onAction="#closeBtnOnAction" prefHeight="35" prefWidth="100"
                    style="-fx-background-color: #7F8C8D; -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 14px;"
                    text="Close" />
        </HBox>

    </VBox>
</AnchorPane>
