<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="courseInstructorRoot" prefHeight="700" prefWidth="1100"
            style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #ECF0F1, #BDC3C7);"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm.orm_final_project.Controllers.CourseInstructorpageController">

    <!-- Centered content box -->
    <VBox layoutX="200" layoutY="80" spacing="20" prefWidth="700" prefHeight="540"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 0); -fx-padding: 20;">

        <!-- Header -->
        <Label alignment="CENTER" prefWidth="700"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"
               text="Manage Course Instructors" />

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="addBtn" onAction="#addBtnOnAction" prefHeight="40" prefWidth="120"
                    style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 14px;"
                    text="Add" />
            <Button fx:id="updateBtn" onAction="#updateBtnOnAction" prefHeight="40" prefWidth="120"
                    style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 14px;"
                    text="Update" />
            <Button fx:id="deleteBtn" onAction="#deleteBtnOnAction" prefHeight="40" prefWidth="120"
                    style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-background-radius: 15; -fx-font-size: 14px;"
                    text="Delete" />
        </HBox>

        <!-- Table -->
        <TableView fx:id="courseInstructorTable" prefHeight="400" prefWidth="660"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #ccc;">
            <columns>
                <TableColumn fx:id="colInstructorId" prefWidth="330" text="Instructor ID" />
                <TableColumn fx:id="colCourseId" prefWidth="330" text="Course ID" />
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
