<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="700" prefWidth="1360" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.orm.orm_final_project.Controllers.DashBoardController">

    <!-- Dashboard Background Pane -->
    <AnchorPane fx:id="dashboardPane" prefHeight="700" prefWidth="250" style="-fx-background-color: #2C3E50;">

        <!-- User Label -->
        <Label fx:id="userLabel" layoutX="20" layoutY="20" style="-fx-text-fill: #ECF0F1; -fx-font-size: 18px; -fx-font-weight: bold;" text="Hello, Admin" />

        <!-- Buttons -->
        <VBox layoutX="20" layoutY="80" spacing="15">
            <Button fx:id="studentBtn" onAction="#studentBtnOnAction" prefHeight="40" prefWidth="210" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="Student" />
         <Button fx:id="registrationbtn" onAction="#registrationbtnOnAction" prefHeight="40" prefWidth="210" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="Registation" />
            <Button fx:id="instructorBtn" onAction="#instructorBtnOnActon" prefHeight="40" prefWidth="210" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="Instructor" />
            <Button fx:id="courseBtn" onAction="#courseBtnOnAction" prefHeight="40" prefWidth="210" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="Course" />
            <Button fx:id="lessonBtn" onAction="#lessonBtnOnActon" prefHeight="40" prefWidth="210" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="Lesson" />
         <Button fx:id="PaymentBtn" onAction="#PaymentBtnOnAction" prefHeight="40" prefWidth="210" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="Payment" />
         <Button fx:id="usebtn" onAction="#usebtnOnActon" prefHeight="40" prefWidth="210" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="User" />
        </VBox>
      <Button fx:id="backbtn" layoutX="14.0" layoutY="646.0" onAction="#backbtnOnAction" prefHeight="40" prefWidth="80.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" text="back" />
    </AnchorPane>

    <!-- Main Content Pane -->
    <AnchorPane fx:id="mainContentPane" layoutX="250" prefHeight="700" prefWidth="1110" style="-fx-background-color: #ECF0F1;">
        <!-- Main content will be loaded here -->
    </AnchorPane>

</AnchorPane>
